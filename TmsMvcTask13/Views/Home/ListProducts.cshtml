@model TmsMvc.Models.ProductListModel

<h2>Список продуктов</h2>

<table class="table">
    <thead>
        <tr>
            <th>Имя продукта</th>
            <th>Цена</th>
            <th>Количество</th>
            <th>Общая стоимость</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@(product.Price * product.Quantity)</td>
                <td>
                    <form asp-action="EditProduct" asp-route-id="@product.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-warning">Редактировать</button>
                    </form>
                    <form asp-action="DeleteProduct" asp-route-id="@product.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Вы уверены, что хотите удалить продукт?')">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>Количество наименований продуктов: @Model.Count</p>
<p>Общее количество продуктов: @Model.TotalCount</p>
<p>Общая стоимость продуктов: @Model.TotalCost BYN</p>

